import java.util.Scanner;

public class Programa {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		
		String[] dados = new String[5];
		String dado;
		Anuncio anuncio1 = new Anuncio();
		
		String[] informacao = {"o nome", "o cliente", "a data de início", "a data de término", "o valor investido por dia"};
		int i = 0;
		while(i<5) {
			System.out.println("Sobre o anúncio, digite " + informacao[i] + ":");
			dado = entrada.next();
			dados[i] = dado;
			i++;
		}
		
		anuncio1.setDados(dados);
		anuncio1.setNome(dados[0]);
		anuncio1.setCliente(dados[1]);
		anuncio1.setDataInicio(dados[2]);
		anuncio1.setDataTermino(dados[3]);
		anuncio1.setInvestimentoPorDia(dados[4]);
		
		//System.out.println("Deseja cadastrar mais um anúncio?");
        
		System.out.println("Dados do anúncio são: " + anuncio1.getNome() + anuncio1.getInvestimentoPorDia());
		System.out.printf("O valor total investido foi: R$ %.2f", anuncio1.calculadora());
		
		entrada.close();
	}

}
